<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Android.Fragment.AttendanceFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bottom_curve"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_backarrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="140dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/search"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Search"
                    android:layout_marginRight="5dp"
                    android:drawableRight="@drawable/ic_baseline_search_24"
                    android:background="@drawable/edittext_black_stroke_bg"
                    android:padding="8dp" />

                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/search"
                    android:background="@drawable/bg_cardview"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:entries="@array/sort_by"
                    android:gravity="center_horizontal" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardCornerRadius="30dp"
                android:id="@+id/cardview1"
                app:cardElevation="10dp"
                android:background="@drawable/bg_cardview"
                android:layout_margin="10dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_cardview"
                    android:paddingLeft="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameemployee1"
                        android:text="Present"
                        android:layout_marginTop="10dp"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/login_logout1"
                        android:text="Designation"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/nameemployee1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_logout1"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/designationemployee1"
                            android:text="Login &amp; Logout"
                            android:textColor="@color/black"
                            android:layout_below="@id/login_logout1"
                            tools:ignore="NotSibling" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/date1"
                            android:text="Date"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardCornerRadius="30dp"
                android:id="@+id/cardview2"
                app:cardElevation="10dp"
                android:background="@drawable/bg_cardview"
                android:layout_margin="10dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_cardview"
                    android:paddingLeft="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameemployee2"
                        android:text="Present"
                        android:layout_marginTop="10dp"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/login_logout2"
                        android:text="Designation"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/nameemployee2" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_logout2"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/designationemployee2"
                            android:text="Login &amp; Logout"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/date2"
                            android:text="Date"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black" />

                    </RelativeLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </FrameLayout>

</layout>